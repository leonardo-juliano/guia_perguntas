<%- include('./partials/header'); %>
<%- include('./partials/navbar'); %>

<div class="container">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form method="POST" action="/responder">
        <h3>Resposta</h3>
        <label>Responda:</label>
        <textarea name="corpo" cols="30" rows="10" class="form-control"></textarea> <br>
        <input type="hidden" name="pergunta" value="<%= pergunta.id %>" class="">
        <button class="btn btn-primary">Responder</button>
    </form>
    <hr>
    <p>Respostas</p>
    <hr>
    <% respostas.forEach(respostas => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <p><%= respostas.corpo %></p>
            </div>
        </div>
    <% }); %>

</div>

<%- include('./partials/footer'); %>